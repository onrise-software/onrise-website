---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About ONRISE.software | Leading AI Solutions Agency',
  description: 'ONRISE.software is a premier IT outsourcing company in Vietnam, specializing in AI-enabled solutions. We combine Vietnam\'s top tech talent with cutting-edge AI technology to deliver innovative software development, custom AI solutions, and digital transformation services for global businesses.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://hieutranspace.imgix.net/1735632308239.png',
      alt: 'ONRISE.software Team Collaboration',
    }}
  >
    <Fragment slot="title">
      Pioneering the Future of <br />
      <span class="text-accent dark:text-white highlight">AI Innovation</span>
    </Fragment>

    <Fragment slot="subtitle">
      At ONRISE.software, we're passionate about transforming businesses through innovative AI solutions. Our team of expert 
      engineers and developers combines cutting-edge technology with deep industry expertise to create intelligent solutions 
      that drive real business value. We believe in the power of AI to enhance human capabilities and create more efficient, 
      productive, and intelligent organizations.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact in Numbers"
    stats={[
      { title: 'Projects Delivered', amount: '200+' },
      { title: 'AI Models Deployed', amount: '500+' },
      { title: 'Client Success Rate', amount: '98%' },
      { title: 'Team Experts', amount: '50+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Expertise"
    subtitle="We specialize in developing cutting-edge AI solutions that help businesses automate processes, enhance decision-making, and drive innovation."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'AI Development',
        description:
          'Building custom AI agents and solutions that automate complex tasks, enhance productivity, and deliver measurable business results.',
        icon: 'tabler:robot',
      },
      {
        title: 'Machine Learning',
        description:
          'Creating intelligent systems that learn and improve from experience, providing predictive insights and data-driven decision support.',
        icon: 'tabler:brain',
      },
      {
        title: 'Natural Language Processing',
        description:
          'Developing sophisticated NLP solutions that enable natural human-computer interaction and automated content analysis.',
        icon: 'tabler:message-circle-2',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Computer Vision',
        description:
          'Implementing advanced image and video analysis systems for object detection, recognition, and visual quality control.',
        icon: 'tabler:eye',
      },
      {
        title: 'Cloud Solutions',
        description:
          'Designing and deploying scalable AI solutions in the cloud, ensuring high availability and optimal performance.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Data Analytics',
        description:
          'Transforming raw data into actionable insights through advanced analytics and visualization techniques.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Process Automation',
        description:
          'Streamlining business operations with intelligent automation solutions that reduce costs and improve efficiency.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'API Development',
        description:
          'Creating robust APIs that enable seamless integration of AI capabilities into existing systems and applications.',
        icon: 'tabler:api',
      },
      {
        title: 'AI Consulting',
        description:
          'Providing expert guidance on AI strategy, implementation, and optimization to maximize technology investments.',
        icon: 'tabler:bulb',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1665686377065-08ba896d16fd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AI Innovation Hub',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="At ONRISE.software, our values guide everything we do, from how we develop solutions to how we interact with our clients."
    items={[
      {
        title: 'Innovation Excellence',
        description:
          'We continuously push the boundaries of what\'s possible with AI, staying at the forefront of technological advancement to deliver cutting-edge solutions.',
      },
      {
        title: 'Client Success',
        description:
          'Your success is our success. We\'re committed to understanding your unique challenges and delivering solutions that exceed expectations.',
      },
      {
        title: 'Ethical AI Development',
        description:
          'We believe in developing AI solutions responsibly, ensuring transparency, fairness, and privacy in everything we create.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose ONRISE.software"
    subtitle="We combine technical expertise with business acumen to deliver AI solutions that create real value for our clients."
    isReversed={true}
    callToAction={{
      text: 'Start Your AI Journey',
      href: '/contact/',
    }}
    items={[
      {
        title: 'Deep Technical Expertise',
        description: 'Our team of AI experts and engineers brings years of experience in developing sophisticated AI solutions across industries.',
        icon: 'tabler:code',
      },
      {
        title: 'Proven Track Record',
        description:
          'With hundreds of successful projects delivered, we have the experience and expertise to ensure your project\'s success.',
        icon: 'tabler:chart-arrows-vertical',
      },
      {
        title: 'End-to-End Support',
        description:
          'From initial consultation to deployment and ongoing maintenance, we provide comprehensive support throughout your AI journey.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Global Presence"
    tagline="Where to Find Us"
    columns={3}
    items={[
      {
        title: 'San Francisco',
        description: 'Main Office - AI Innovation Hub',
        icon: 'tabler:building',
      },
      {
        title: 'New York',
        description: 'East Coast Operations',
        icon: 'tabler:building',
      },
      {
        title: 'London',
        description: 'European Headquarters',
        icon: 'tabler:building',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact Us"
    columns={2}
    items={[
      {
        title: 'Schedule a Consultation',
        description:
          'Discuss your AI needs with our experts and discover how we can help transform your business.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Technical Support',
        description:
          'Our support team is available 24/7 to assist you with any technical questions or challenges.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
