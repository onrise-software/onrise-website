---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'ONRISE â€” Leading AI-Powered Software Development Company in Vietnam',  description: 'ONRISE is a premier software development company in Vietnam, specializing in AI-powered solutions. We combine Vietnam\'s top tech talent with cutting-edge AI technology to deliver cost-effective, high-quality software development and digital transformation services.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact/',
        icon: 'tabler:rocket',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'ONRISE Software Development' }}
  >
    <Fragment slot="title">
      Building the Future with <span class="text-accent dark:text-white highlight">AI-Powered Software</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">ONRISE</span> is a leading software development company specializing in creating intelligent, AI-powered applications that transform businesses and enhance user experiences.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">ONRISE: AI-Powered Development.</span>
      We create custom software solutions that leverage AI to automate processes, enhance decision-making, and drive business growth.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Clean Code, Best Practices and High Performance" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Expertise"
    title="Why Choose ONRISE"
    subtitle="We combine cutting-edge software development practices with AI technology to deliver solutions that drive real business value."
    items={[
      {
        title: 'Full-Stack Development',
        description:
          'End-to-end software development services covering frontend, backend, and AI integration for complete solutions.',
        icon: 'tabler:code',
      },
      {
        title: 'AI Integration',
        description:
          'Seamless integration of AI capabilities into your software applications to enhance functionality and user experience.',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud Architecture',
        description:
          'Scalable and secure cloud-based solutions designed for optimal performance and reliability.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Enterprise-Grade Security',
        description:
          'Robust security measures to protect your data and ensure compliance with industry standards.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Agile Development',
        description:
          'Flexible and efficient development process that adapts to your needs and delivers results quickly.',
        icon: 'tabler:arrows-diagonal',
      },
      {
        title: 'Continuous Innovation',
        description:
          'Staying ahead of the curve with the latest technologies and AI advancements to keep your solutions cutting-edge.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Approach"
    title="Building Intelligent Software"
    items={[
      {
        title: 'Deep Understanding',
        description:
          'We begin by thoroughly understanding your business needs and challenges to design the perfect software solution.',
      },
      {
        title: 'Custom Development',
        description:
          'Our team develops bespoke software that aligns perfectly with your business processes and goals.',
      },
      {
        title: 'Seamless Integration',
        description:
          'We ensure smooth integration with your existing systems and workflows for immediate value.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Software Development Process',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Development Process</h3>
      We follow a proven methodology to deliver software solutions that drive real business results
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'AI-Powered Features',
        description: `Enhance your software with intelligent features that automate tasks and improve user experience.`,
      },
      {
        title: 'Smart Analytics',
        description:
          'Leverage AI-powered analytics to gain valuable insights from your application data.',
      },
      {
        title: 'Automated Testing',
        description:
          'Implement AI-driven testing to ensure software quality and reliability.',
      },
      {
        title: 'Predictive Maintenance',
        description:
          'Use AI to predict and prevent potential issues before they impact your users.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Software Solutions',
    }}
  >
    <Fragment slot="content">Transform your business with intelligent software solutions.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Our Software Development Journey"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery</span>',
        description:
          "We begin by understanding your business needs, challenges, and goals to design the perfect software solution.",
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Design</span>',
        description:
          "Our team creates a detailed plan for your software, including architecture, features, and AI integration points.",
        icon: 'tabler:layout',
      },
      {
        title: 'Step 3: <span class="font-medium">Development</span>',
        description:
          'We build your software using the latest technologies and best practices in software development.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 4: <span class="font-medium">Deployment</span>',
        description:
          'We deploy your solution and provide ongoing support to ensure optimal performance.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Software Development Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Software Solutions"
    subtitle="Comprehensive software solutions for modern businesses"
    tagline="Solutions"
    items={[
      {
        title: 'Web Applications',
        description: "Modern, responsive web applications with AI-powered features and seamless user experience.",
        icon: 'tabler:world',
      },
      {
        title: 'Mobile Apps',
        description:
          "Native and cross-platform mobile applications with intelligent features and offline capabilities.",
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Enterprise Software',
        description:
          'Custom enterprise solutions that streamline operations and enhance productivity.',
        icon: 'tabler:building',
      },
      {
        title: 'AI Integration',
        description:
          'Seamless integration of AI capabilities into existing software systems.',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud Solutions',
        description:
          'Scalable cloud-based applications with advanced security and performance.',
        icon: 'tabler:cloud',
      },
      {
        title: 'API Development',
        description: 'Robust API development for seamless system integration and data exchange.',
        icon: 'tabler:api',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- BlogLatestPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more in our Blog"
    information={`Stay up to date with the latest developments in software development and AI technology.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Learn more about our software development services and how they can benefit your business"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What technologies do you use?',
        description:
          "We use a wide range of modern technologies including React, Node.js, Python, and various AI frameworks. Our tech stack is chosen based on your specific needs and project requirements.",
      },
      {
        title: 'How can AI enhance my software?',
        description:
          'AI can enhance your software through intelligent automation, predictive analytics, natural language processing, and machine learning capabilities. We integrate AI features that add real value to your applications.',
      },
      {
        title: 'What industries do you serve?',
        description:
          'We serve a wide range of industries including healthcare, finance, retail, manufacturing, and professional services. Our solutions are customizable to meet the specific needs of each sector.',
      },
      {
        title: 'How long does it take to develop software?',
        description:
          'Development time varies based on complexity and requirements. Simple applications can be delivered in weeks, while more complex solutions may take several months. We work closely with you to establish realistic timelines.',
      },
      {
        title: 'What kind of support do you provide?',
        description:
          'We offer comprehensive support including initial training, ongoing maintenance, performance monitoring, and regular updates to ensure your software continues to deliver value.',
      },
      {
        title: 'How do you ensure code quality?',
        description:
          'We follow industry best practices including code reviews, automated testing, continuous integration, and regular security audits. Our development process ensures high-quality, maintainable code.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Projects Completed', amount: '150+' },
      { title: 'AI Features Implemented', amount: '300+' },
      { title: 'Client Satisfaction', amount: '98%' },
      { title: 'Years Experience', amount: '5+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact/',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Transform Your Business with <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">AI-Powered Software?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Let's discuss how our software development services can help your business grow and innovate. <br class="hidden md:inline" />Contact us today to get started!
    </Fragment>
  </CallToAction>
</Layout>
