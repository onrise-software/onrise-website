---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'AI & Software Development Services | ONRISE.software',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    title="Transforming Businesses with Intelligent Solutions"
    subtitle="We combine cutting-edge AI technology with expert software development to create powerful, custom solutions that drive innovation and growth for your business."
    actions={[{ variant: 'primary', text: 'Schedule a Consultation', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1485827404703-89b55fcc595e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'ONRISE.software AI Solutions',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Core Services"
    subtitle="Discover how our AI-powered solutions can revolutionize your business operations and drive sustainable growth."
    columns={3}
    items={[
      {
        title: 'Custom AI Agents',
        description:
          'Develop intelligent agents tailored to your specific business needs, automating complex tasks and enhancing decision-making processes with advanced AI capabilities.',
        icon: 'tabler:robot',
      },
      {
        title: 'Natural Language Processing',
        description:
          'Implement sophisticated NLP solutions for content analysis, sentiment tracking, and automated communication systems that understand and respond naturally.',
        icon: 'tabler:message-circle-2',
      },
      {
        title: 'Machine Learning Solutions',
        description: 'Create predictive models and data-driven systems that learn and improve over time, providing valuable insights and automated decision-making capabilities.',
        icon: 'tabler:brain',
      },
      {
        title: 'Process Automation',
        description:
          'Streamline operations with intelligent automation solutions that reduce manual effort, minimize errors, and increase productivity across your organization.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'Computer Vision',
        description:
          'Implement advanced image and video analysis systems for object detection, facial recognition, and visual quality control in various industrial applications.',
        icon: 'tabler:eye',
      },
      {
        title: 'Data Analytics',
        description:
          'Transform raw data into actionable insights with our advanced analytics solutions, powered by AI to uncover patterns and predict future trends.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'API Development',
        description:
          'Build robust and scalable APIs that enable seamless integration of AI capabilities into your existing systems and applications.',
        icon: 'tabler:api',
      },
      {
        title: 'Cloud AI Solutions',
        description: 'Deploy and scale AI solutions in the cloud, ensuring high availability, performance, and cost-effectiveness for your applications.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'AI Consulting',
        description:
          'Get expert guidance on AI strategy, implementation, and optimization to ensure your technology investments deliver maximum business value.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'State-of-the-Art AI Technology',
        description:
          'Access cutting-edge AI models and algorithms that keep you ahead of the competition.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Scalable Architecture',
        description:
          'Build solutions that grow with your business, handling increased workloads without compromising performance.',
        icon: 'tabler:arrows-diagonal',
      },
      {
        title: 'Security-First Approach',
        description:
          'Implement robust security measures to protect your data and ensure compliance with industry standards.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Continuous Innovation',
        description:
          'Stay ahead with regular updates and improvements as AI technology evolves.',
        icon: 'tabler:refresh',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1555949963-aa79dcee981c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'AI Development Features',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose ONRISE.software</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Rapid Development',
        description:
          'Accelerate your digital transformation with our efficient development processes and pre-built AI components.',
        icon: 'tabler:clock',
      },
      {
        title: 'Expert Team',
        description:
          'Work with seasoned AI engineers and developers who bring deep expertise in both artificial intelligence and software development.',
        icon: 'tabler:users',
      },
      {
        title: 'ROI-Focused',
        description:
          'Maximize your return on investment with solutions that deliver measurable business value and tangible results.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Ongoing Support',
        description:
          'Receive comprehensive support and maintenance to ensure your AI solutions continue to perform optimally.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1562813733-b31f71025d54?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'AI Development Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The ONRISE.software Advantage</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Success Stories"
    testimonials={[
      {
        testimonial: `ONRISE.software transformed our customer service operations with their AI agents. We've seen a 60% reduction in response times and significantly improved customer satisfaction scores.`,
        name: 'Sarah Chen',
        job: 'CTO, TechCorp Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Sarah Chen Image',
        },
      },
      {
        testimonial: `The predictive analytics solution developed by ONRISE.software has revolutionized our inventory management. We've reduced stockouts by 45% and improved our supply chain efficiency dramatically.`,
        name: 'Michael Rodriguez',
        job: 'Operations Director, Global Retail Inc',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Michael Rodriguez Image',
        },
      },
      {
        testimonial: `Working with ONRISE.software on our AI-powered fraud detection system has been transformative. Their expertise in both AI and security helped us reduce fraudulent transactions by 80%.`,
        name: 'Emma Thompson',
        job: 'Head of Security, FinTech Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Emma Thompson Image',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your AI Journey',
        href: '/contact',
      },
    ]}
    title="Ready to Transform Your Business?"
    subtitle="Schedule a consultation with our AI experts to explore how we can help you achieve your business goals."
  />
</Layout>
