---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Mobile App Development | ONRISE.software',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'React Native', href: '#react-native' },
        { text: 'Flutter', href: '#flutter' },
        { text: 'Native Apps', href: '#native' },
      ]}
      actions={[
        {
          text: 'Start Your Project',
          href: '/contact/',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Mobile App Development"
    image={{
      src: 'https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
      alt: 'Mobile App Development',
    }}
  >
    <Fragment slot="title">
      Cross-Platform & Native <span class="text-accent dark:text-white highlight">Mobile Development</span> Expertise
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Transform your ideas into powerful mobile applications using cutting-edge technologies like React Native and Flutter.
      </span>
      We deliver exceptional mobile experiences for both iOS and Android platforms.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="primary" href="#features">Explore Our Expertise</Button>
      <Button variant="link" href="/contact">Contact Us</Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="Why Choose Our Mobile Development Services?"
    subtitle="We combine the power of cross-platform frameworks with native expertise to deliver high-performance, scalable mobile applications that your users will love."
    tagline="Our Expertise"
    columns={2}
    items={[
      {
        title: 'React Native Development',
        description: 'Build cross-platform applications with native performance using React Native. Perfect for businesses looking to reach both iOS and Android users with a single codebase.',
        icon: 'tabler:brand-react',
      },
      {
        title: 'Flutter Excellence',
        description: 'Create beautiful, natively compiled applications from a single codebase with Flutter. Ideal for stunning UIs and smooth animations across all platforms.',
        icon: 'tabler:brand-flutter',
      },
      {
        title: 'Native iOS Development',
        description: 'Leverage the full power of Swift and iOS platform features to create premium experiences for Apple users.',
        icon: 'tabler:brand-apple',
      },
      {
        title: 'Native Android Development',
        description: 'Build robust Android applications using Kotlin, taking advantage of the latest platform capabilities and Material Design.',
        icon: 'tabler:brand-android',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1555774698-0b77e0d5fac6?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80',
      alt: 'Mobile Development Process',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    id="react-native"
    isReversed
    items={[
      {
        title: 'Cross-Platform Efficiency',
        description: 'Share up to 90% of code between iOS and Android platforms, significantly reducing development time and costs.',
        icon: 'tabler:code',
      },
      {
        title: 'Native Performance',
        description: 'Achieve near-native performance with direct access to platform-specific APIs and components.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Hot Reloading',
        description: 'Faster development cycles with instant feedback on code changes without losing application state.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Large Ecosystem',
        description: 'Access to a vast collection of pre-built components and third-party libraries.',
        icon: 'tabler:apps',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551650975-87deedd944c3?ixlib=rb-4.0.3&auto=format&fit=crop&w=1674&q=80',
      alt: 'React Native Development',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">React Native Development</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    id="flutter"
    items={[
      {
        title: 'Beautiful UIs',
        description: 'Create stunning, custom designs with Flutter\'s rich widget library and powerful animation capabilities.',
        icon: 'tabler:palette',
      },
      {
        title: 'Single Codebase',
        description: 'Develop for multiple platforms from a single codebase, including iOS, Android, web, and desktop.',
        icon: 'tabler:code',
      },
      {
        title: 'Fast Development',
        description: 'Accelerate development with hot reload and a comprehensive set of pre-built widgets.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Native Performance',
        description: 'Achieve excellent performance with Flutter\'s native compilation and hardware acceleration.',
        icon: 'tabler:chart-arrows',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1618761714954-0b8cd0026356?ixlib=rb-4.0.3&auto=format&fit=crop&w=1674&q=80',
      alt: 'Flutter Development',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Flutter Development</h3>
    </Fragment>
  </Content>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Mobile Development Impact"
    stats={[
      { title: 'Apps Delivered', amount: '50+', icon: 'tabler:device-mobile' },
      { title: 'Client Satisfaction', amount: '100%', icon: 'tabler:user-star' },
      { title: 'App Store Rating', amount: '4.8', icon: 'tabler:star' },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Client Success Stories"
    testimonials={[
      {
        testimonial: `ONRISE.software delivered a stunning React Native app that exceeded our expectations. Their expertise in cross-platform development helped us launch on both iOS and Android simultaneously.`,
        name: 'Sarah Chen',
        job: 'Product Manager at TechCorp',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
          alt: 'Sarah Chen',
        },
      },
      {
        testimonial: `The Flutter app they built for us is incredibly smooth and beautiful. Their attention to detail and focus on user experience really shows in the final product.`,
        name: 'Mark Thompson',
        job: 'CTO at StartupX',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
          alt: 'Mark Thompson',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'How do you choose between React Native and Flutter?',
        description: 'We evaluate factors like your project requirements, timeline, budget, and specific platform needs. React Native is excellent for apps requiring deep platform integration, while Flutter shines in creating custom, branded experiences with complex animations.',
      },
      {
        title: 'Do you support both iOS and Android platforms?',
        description: 'Yes, we have extensive experience in both iOS and Android development. Whether using cross-platform frameworks or native development, we ensure your app works perfectly on both platforms.',
      },
      {
        title: 'What about app store submission and compliance?',
        description: 'We handle the entire process of preparing and submitting your app to both the Apple App Store and Google Play Store, ensuring compliance with all platform-specific requirements and guidelines.',
      },
      {
        title: 'Do you provide ongoing maintenance and support?',
        description: 'Yes, we offer comprehensive maintenance and support packages to keep your app running smoothly, including regular updates, bug fixes, and platform compatibility updates.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Build Your Mobile App?"
    subtitle="Let's create an exceptional mobile experience for your users across all platforms."
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact/',
      },
      {
        variant: 'secondary',
        text: 'Learn More',
        href: '#features',
      },
    ]}
  />
</Layout>
